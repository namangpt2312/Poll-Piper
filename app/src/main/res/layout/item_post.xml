<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/userImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultavatar"
            app:shapeAppearanceOverlay="@style/RoundedImageView" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/userImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/userImage"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            android:textColor="#212121"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/createdAt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/userImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userName"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userImage"
            android:id="@+id/postTitle"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="#212121" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/option1"
            app:layout_constraintTop_toBottomOf="@id/postTitle"
            app:layout_constraintStart_toStartOf="@id/postTitle"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/option1fill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/bar_shape"/>

            <View
                android:id="@+id/option1unfill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/option1text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/option1"
            app:layout_constraintBottom_toBottomOf="@id/option1"
            android:text="Option 1"
            android:textColor="#212121"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/option1count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/option1"
            app:layout_constraintBottom_toBottomOf="@id/option1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textColor="#212121" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/option2"
            app:layout_constraintTop_toBottomOf="@id/option1"
            app:layout_constraintStart_toStartOf="@id/postTitle"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/option2fill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/bar_shape"/>

            <View
                android:id="@+id/option2unfill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/option2text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/option2"
            app:layout_constraintBottom_toBottomOf="@id/option2"
            android:text="Option 2"
            android:textColor="#212121"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/option2count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/option2"
            app:layout_constraintBottom_toBottomOf="@id/option2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textColor="#212121" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/option3"
            app:layout_constraintTop_toBottomOf="@id/option2"
            app:layout_constraintStart_toStartOf="@id/postTitle"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/option3fill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/bar_shape"/>

            <View
                android:id="@+id/option3unfill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/option3text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/option3"
            app:layout_constraintBottom_toBottomOf="@id/option3"
            android:text="Option 3"
            android:textColor="#212121"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/option3count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/option3"
            app:layout_constraintBottom_toBottomOf="@id/option3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textColor="#212121" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/option4"
            app:layout_constraintTop_toBottomOf="@id/option3"
            app:layout_constraintStart_toStartOf="@id/postTitle"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/option4fill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/bar_shape"/>

            <View
                android:id="@+id/option4unfill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/option4text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/option4"
            app:layout_constraintBottom_toBottomOf="@id/option4"
            android:text="Option 4"
            android:textColor="#212121"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/option4count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/option4"
            app:layout_constraintBottom_toBottomOf="@id/option4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textColor="#212121" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>